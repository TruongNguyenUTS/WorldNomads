<div class="jumbotron">
    <div class="row" style="font-size:12px;">
        @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(m => m.InputNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.InputNumber, new { @class = "form-control", @maxlength = "9" })
                    @*@Html.ValidationMessageFor(m => m.InputNumber, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
            <hr />

            


        }
    </div>
    
    
    <div class="row" style="font-size:14px;">
        <span style="font-weight:bold; font-size:17px">@ViewBag.Result</span>
        <ol>
            <li><span style="font-weight:bold; font-style:italic">All Number: </span>@ViewBag.Result1</li>
            <li><span style="font-weight:bold; font-style:italic">Odd Number: </span>@ViewBag.Result2</li>
            <li><span style="font-weight:bold; font-style:italic">Even Number: </span>@ViewBag.Result3</li>
            <li><span style="font-weight:bold; font-style:italic">Other Number: </span>@ViewBag.Result4</li>
            <li><span style="font-weight:bold; font-style:italic">Fibonacci Number: </span>@ViewBag.Result5</li>
        </ol>

    </div>
</div>
